<div class="hero">
    <h2><%= title %></h2>
    <p>Browse and manage your recipe collection</p>

    <div style="margin-top: 2rem;">
      <a href="/recipes/new">
        <button style="margin-right: 1rem;">+ Add New Recipe</button>
      </a>
    </div>

    <% if (recipes.length === 0) { %>
      <!-- Empty State -->
      <div style="text-align: center; padding: 4rem 2rem; background: white;
   border-radius: 20px; margin: 2rem auto; max-width: 600px; box-shadow: 0 
  10px 40px var(--shadow);">
        <div style="font-size: 5rem; margin-bottom: 1rem;">ğŸ³</div>
        <h2 style="color: var(--primary-orange); margin-bottom: 1rem;">No
  Recipes Yet!</h2>
        <p style="color: var(--text-light); margin-bottom: 2rem; font-size: 
  1.1rem;">Start building your personal collection by adding your first
  recipe.</p>
        <a href="/recipes/new" style="display: inline-block; background: 
  linear-gradient(135deg, var(--primary-orange), var(--dark-orange)); color:
   white; padding: 1rem 2rem; border-radius: 50px; text-decoration: none; 
  font-weight: 600; transition: all 0.3s ease;">
          â• Add Your First Recipe
        </a>
      </div>
    <% } else { %>
      <!-- Recipe Cards -->
      <div class="results-grid" style="margin-top: 2rem;">
        <% recipes.forEach(recipe => { %>
          <div class="recipe-card">
            <h3><%= recipe.title || recipe.name %></h3>
            <% if (recipe.category) { %>
              <p><strong>Category:</strong> <%= recipe.category %></p>
            <% } %>
            <% if (recipe.rating) { %>
              <p><strong>Rating:</strong> â­ <%= recipe.rating %></p>
            <% } %>
            <% if (recipe.instructions) { %>
              <p style="color: #666; font-size: 0.9rem; margin-top: 
  0.5rem;">
                <%= recipe.instructions.length > 100 ?
  recipe.instructions.substring(0, 100) + '...' : recipe.instructions %>
              </p>
            <% } %>
            <div style="margin-top: 1rem; display: flex; gap: 0.5rem; 
  justify-content: center;">
              <a href="/recipes/<%= recipe.id %>/edit">
                <button style="padding: 0.5rem 1rem; font-size: 0.9rem;">âœï¸
  Edit</button>
              </a>
              <form action="/recipes/<%= recipe.id %>/delete" method="POST" 
  style="display: inline;" onsubmit="return confirm('Are you sure you want 
  to delete this recipe?');">
                <button type="submit" style="padding: 0.5rem 1rem; 
  font-size: 0.9rem; background: linear-gradient(135deg, #e74c3c, 
  #c0392b);">ğŸ—‘ï¸ Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>